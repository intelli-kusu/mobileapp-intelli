<resources>

    <style name="Widget.Theme.IntelliCare.ActionBar.Fullscreen" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="Widget.Theme.IntelliCare.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>

    <style name="FullScreenVideoTheme" parent="Theme.AppCompat">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppTheme.Button" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/primary</item>
        <item name="android:disabledAlpha">0.7</item>
        <item name="android:layout_marginLeft">-8dp</item>
        <item name="android:layout_marginRight">-5dp</item>
    </style>

    <style name="AppTheme.Button.Visit" parent="Widget.AppCompat.Button.Colored">
        <item name="android:disabledAlpha">0.3</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:textColor">@color/custom_btn_text_color</item>
    </style>

    <style name="MySpinnerItemStyle" parent="Widget.AppCompat.Light.DropDownItem.Spinner">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">14sp</item>
    </style>


    <style name="VisitInfoTextStyle" parent="TextAppearance.AppCompat">
        <item name="android:layout_marginTop">@dimen/top_margin_to_visit_info_labels</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:lineSpacingExtra">0dp</item>
    </style>

    <style name="LoginLabelTextStyle" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/label_to_label_margin_login</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:textSize">@dimen/label_text_size_login</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="LoginEditTextStyle" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/label_to_field_margin_login</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/label_text_size_login</item>
        <item name="android:textStyle">normal</item>
        <item name="android:background">@drawable/edit_bg</item>
        <item name="android:padding">@dimen/edit_field_padding_login</item>
    </style>

    <style name="SwitchCompatTheme" >
        <item name="colorControlActivated">@color/green</item>
    </style>
</resources>